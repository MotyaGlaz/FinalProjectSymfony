{% extends 'base.html.twig' %}

{% block title %}Кланы{% endblock %}

{% block body %}
    <h1>Кланы</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clan.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ clan.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clan_index') }}">Вернуться</a>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_clan_edit', {'id': clan.id}) }}">Изменить</a>
        {{ include('clan/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
