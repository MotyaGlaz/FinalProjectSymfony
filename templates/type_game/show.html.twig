{% extends 'base.html.twig' %}

{% block title %}Типы игр{% endblock %}

{% block body %}
    <h1>Типы игр</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type_game.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ type_game.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_type_game_index') }}">Вернуться</a>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_type_game_edit', {'id': type_game.id}) }}">Изменить</a>
        {{ include('type_game/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
