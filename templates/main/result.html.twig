{% extends 'base.html.twig' %}

{% block title %}Игры клана{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Игры клана</h1>
        {% if games %}
            <b>Игры клана {{ clan_name }}</b><br>
            <br>
            {% for game in games %}
                {{ game }}<br>
            {% endfor %}
        {% else %}
            <b>Клан не играет в игры :(</b><br>
        {% endif %}

        <form action="/" method="get">
            <input name="student" type="hidden" value="">
            <input type="submit" value="Вернуться">
        </form>
    </div>
{% endblock %}
