{% extends 'base.html.twig' %}

{% block title %}Издатели{% endblock %}

{% block body %}
    <h1>Издатели</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publisher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publisher.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publisher_index') }}">Вернуться</a>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_publisher_edit', {'id': publisher.id}) }}">Изменить</a>
        {{ include('publisher/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
