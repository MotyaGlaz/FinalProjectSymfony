<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Добро пожаловать!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <a href="/clan">Кланы</a>
    <a href="/player">Игроки</a>
    <a href="/game">Игры</a>
    <a href="/type/game">Типы Игр</a>
    <a href="/publisher">Издатели</a>
    {% if app.request.get('_route') != 'app_login' and app.request.get('_route') != 'app_register' %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="/">Игры кланов</a>
            <a href="/logout">Выйти</a>
        {% else %}
            <br>
            <a href="/login">Войти</a>
            <a href="/register">Зарегистрироваться</a>
        {% endif %}
    {% endif %}
    {% block body %}{% endblock %}
</body>
</html>
