{% extends 'base.html.twig' %}

{% block title %}Игрок{% endblock %}

{% block body %}
    <h1>Игрок</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ player.nickname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_player_index') }}">Вернуться</a>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_player_edit', {'id': player.id}) }}">Изменить</a>
        {{ include('player/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
